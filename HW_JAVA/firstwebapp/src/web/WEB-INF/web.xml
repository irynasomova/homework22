<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>org.itstep.firstwebapp.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserRemover</servlet-name>
        <servlet-class>org.itstep.firstwebapp.UserRemoverServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserRemover</servlet-name>
        <url-pattern>/remove-user</url-pattern>
    </servlet-mapping>

</web-app>